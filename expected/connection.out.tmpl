-- ===================================================================
-- create test functions
-- ===================================================================
CREATE FUNCTION initialize_remote_temp_table(text, integer)
	RETURNS void
	AS 'pg_shard'
	LANGUAGE C STRICT;
CREATE FUNCTION count_remote_temp_table_rows(text, integer)
	RETURNS integer
	AS 'pg_shard'
	LANGUAGE C STRICT;
CREATE FUNCTION get_and_purge_connection(text, integer)
	RETURNS void
	AS 'pg_shard'
	LANGUAGE C STRICT;
-- ===================================================================
-- test connection hash functionality
-- ===================================================================
\set VERBOSITY terse
-- connect to non-existant host
SELECT initialize_remote_temp_table('dummyhost', $PGPORT);
WARNING:  Connection failed to dummyhost:$PGPORT
ERROR:  could not connect to dummyhost:$PGPORT
\set VERBOSITY default
-- try to use hostname over 255 characters
SELECT initialize_remote_temp_table(repeat('a', 256), $PGPORT);
ERROR:  hostnames may not exceed 255 characters
-- connect to localhost and build a temp table
SELECT initialize_remote_temp_table('localhost', $PGPORT);
 initialize_remote_temp_table 
